apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: minecraft-somemissing-info-cert
  namespace: default
spec:
  secretName: minecraft-somemissing-info-tls
  issuerRef:
    name: cert-manager-webhook-dnsimple-production
    kind: ClusterIssuer
  commonName: &cn minecraft.somemissing.info
  dnsNames:
    - *cn
---
apiVersion: projectcontour.io/v1
kind: HTTPProxy
metadata:
  name: miencraft-somemissing-info
  namespace: default
spec:
  virtualhost:
    fqdn: minecraft.somemissing.info
    tls:
      secretName: minecraft-somemissing-info-tls
  routes:
    - conditions:
        - prefix: /
      services:
        - name: vmubt1804minecraft
          port: 8123
---
apiVersion: v1
kind: Service
metadata:
  name: vmubt1804minecraft
  namespace: default
spec:
  type: ExternalName
  externalName: vmubt1804minecraft.homelab.somemissing.info
  ports:
    - port: 8123
      targetPort: 8123
      protocol: TCP
---